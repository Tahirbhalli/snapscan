<div class="container-fluid text-body mt-2">
    <h3 class="text-center font-weight-bold pb-4">Create new Group</h3>
    
   <%= form_for @group, :url => create_group_profile_index_path do |f|%>
    <div class="form-group">
    <%=f.text_field :name%>
    </div>
    <%if !flash[:msg].nil?%>
      <span class="alert alert-danger text-center"><%= flash[:msg] %></span>
    <%end%>
    <%= f.file_field :cover_pic %>
    <button type="submit" class="d-flex btn btn-primary mx-auto">Submit</button>
    <%end%>
  
</div>