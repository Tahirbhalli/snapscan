<div class="text-body text-center">
    <img src="<%=  image_url(session[:pic_url]) %>" class="mx-auto d-block pt-2 pic" alt="profile picture">
    <div class="d-flex justify-content-center pt-3">
       <h3 class="font-weight-bold pt-2">Name: </h3>
       <h4 class="pt-3 pl-2"><%= session[:user_name]%></h4>
    </div>
    <div class="d-flex justify-content-center">
        <h3 class="font-weight-bold pt-2">Email: </h3>
        <h4 class="pl-2 pt-3"><%= session[:user_email]%></h4>
     </div>
     <div class="d-flex justify-content-center">
        <h3 class="font-weight-bold pt-2 ">Balance: </h3>
        <h4 class="pt-3 pl-2">100</h4>
     </div>
     
</div>
