<%= render partial:'account/shared/nav' %>
<main class="col-lg-9 col-md-12 float-lg-right p-2">

<div class="container-fluid text-body mt-2">
    <h3 class="text-center font-weight-bold pb-4">Create Transaction</h3>
<form action="<%= account_profile_transactions_path(session[:current_user]) %>" method="POST" class="w-50 mx-auto">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group">
      <input name="name" type="text" class="form-control" required placeholder="Enter Name of transaction" id="name">
    </div>
    <div class="form-group">
      <input name="amount" type="number" class="form-control" required placeholder="Enter the amount" id="amount">
    </div>
    <%if !flash[:msg].nil?%>
    <div class="form-group">
    <span class="alert alert-danger text-center"><%=flash[:msg]%></span>
    </div>
    <%end%>
    <br>
    <button type="submit" name='submit' class="d-flex btn btn-primary mx-auto">Submit</button>

  </form>
</div>
</main>
