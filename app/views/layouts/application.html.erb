<!DOCTYPE html>
<html>
  <head>
    <title>Snap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/b124683f80.js" crossorigin="anonymous"></script>
  </head>

  <body class="text-white <%=controller_name%>">
  
  <% if !session[:current_user].nil?%>
    <div class="w-100 row dm">
    <section class="bg-primary side-nav col-lg-3 col-3 d-none d-lg-block d-xl-block">
       <a href="<%= account_profile_index_path%>">
            <div class="container-fluid text-center mb-4">    
                <img src="<%= image_url('logo.jpeg') %>" alt="logo" class="pb-2 mx-auto d-block h-25 w-25 img-fluid rounded-circle">
                <span class="text-white badge"><%= session[:user_name] %></span>
            </div>
        </a>
        <ul class="nav flex-column text-center font-weight-bold">
           <li class="nav-item">
             <a class="nav-link active" href="<%= account_profile_transactions_path(session[:current_user]) %>">All My Transactions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= external_account_profile_transactions_path(session[:current_user]) %>">All My External Transactions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= account_profile_group_index_path(session[:current_user]) %>">All Groups</a>
            </li>
        </ul>
        
    </section>
    <section class="col-lg-9 col-12 ml-auto heigth-nav bg-primary">
    <div class="dropdown float-left p-3 d-none d-lg-none d-md-block d-sm-block">
          <img src="<%= image_url(session[:pic_url])%>" alt="profile picture" class="dr_pic">

  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
  <span class="caret"></span></button>
  <ul class="dropdown-menu" id="navItem">
    <li><a class="nav-link active text-body" href="<%= account_profile_transactions_path(session[:current_user]) %>">All My Transactions</a></li>
    <li><a class="nav-link active text-body" href="<%= external_account_profile_transactions_path(session[:current_user]) %>">All My External Transactions</a></li>
    <li><a class="nav-link active text-body" href="<%= account_profile_group_index_path(session[:current_user]) %>">All Groups</a></li>
  </ul>
</div>
    <div class="float-right p-3">
     <a href="<%= new_account_profile_transaction_path(session[:current_user]) %>" class="badge font-weight-bold">Create Transaction</a>
     <a href="<%= new_account_profile_group_path(session[:current_user]) %>" class="badge font-weight-bold">Create Group</a>
     <a href="<%= logout_account_profile_index_path %>" class="badge font-weight-bold">Logout</a>
    </div>
    </section>
    </div>
    <%end%>
    <main class="col-lg-9 col-md-12 float-lg-right p-2">
      <%= yield %>
    </main>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  </body>
</html>
