<main class="text-center">
    <h3 class="pb-4 pt-3 text-center">Snapscan</h3>
    <form action="<%= authentication_user_index_path %>" method="POST" class="container">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <input name="email" type="email" class="form-control" required placeholder="Enter email" id="email">
      </div>
      <div class="form-group">
        <input name="password" type="password" class="form-control" required placeholder="Enter password" id="pwd">
      </div>
    
      <button type="submit" class="btn btn-primary container">Submit</button>

    </form>
</main>
