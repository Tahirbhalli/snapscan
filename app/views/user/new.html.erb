<main class="text-center user-main">
    <h3 class="pb-4 pt-3 text-center font-weight-bold">Snapscan</h3>
    <form action="<%= user_index_path %>" method="POST" class="container">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <input name="name" type="text" class="form-control" required placeholder="Enter name" id="name">
      </div>
      <div class="form-group">
        <input name="email" type="email" class="form-control" required placeholder="Enter email" id="email">
      </div>
      <div class="form-group">
        <input name="password" type="password" class="form-control" required placeholder="Enter password" id="pwd">
      </div>
      <div class="form-group">
        <input name="cpassword" type="password" class="form-control" required placeholder="confirm password" id="cpwd">
      </div>
    
      <button type="submit" class="btn btn-primary container mb-1">Submit</button>

    </form>
</main>
